@using Mapper21.UI.Models
@model Mapper21.Domain.Section

@{
    ViewBag.SectionId = Model.Id;
}

<script src="~/Scripts/Mapper21.js"> </script>
<div class="form-horizontal">
    <div class="box box-primary">
        <div class="box-header">
            <i class="fa fa-edit"></i>
            <h3 class="box-title">Habits</h3>
        </div>
        <div id="habits">
            @Html.Partial("~/Views/Section/Partials/_Habit.cshtml", new HabitViewModel {SectionId = Model.Id})
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}