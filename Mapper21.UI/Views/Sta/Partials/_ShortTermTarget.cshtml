@using Mapper21.UI.Models
<h4><label>Supporting Targets</label></h4>

@(Html.Kendo().Grid<ShortTermTargetViewModel>
      ()
      .Name("grid3")
      .Columns(columns =>
      {
          columns.Bound(s => s.Name);
          columns.Command(commands =>
          {
              commands.Edit(); // The "edit" command will edit and update data items
              commands.Destroy(); // The "destroy" command removes data items
          }).Title("Commands").Width(200);
      })
      .ToolBar(toolbar =>
      {
          toolbar.Create(); // The "create" command adds new data items
          //toolbar.Save(); // The "save" command saves the changed data items
      })
      // .Editable(editable => editable.Mode(GridEditMode.InCell)) // Use in-cell editing mode
      .Editable(editable => editable.Mode(GridEditMode.InLine))
      .DataSource(dataSource =>
          dataSource.Ajax()
              // .Batch(true) // Enable batch updates
              .Model(model =>
              {
                  model.Id(s => s.Id); // Specify the property which is the unique identifier of the model
                  model.Field(s => s.Id).Editable(false); // Make the ProductID property not editable
                  model.Field(s => s.SubSectionStaId).DefaultValue(@ViewBag.SubSectionStaId);
              })
              .Create(create => create.Action("ShortTermTarget_Create", "ShortTermTarget")) // Action method invoked when the user saves a new data item
              .Read(read => read.Action("ShortTermTarget_Read", "ShortTermTarget", new { SubSectionStaId = ViewBag.SubSectionStaId })) // Action method invoked when the grid needs data
              .Update(update => update.Action("ShortTermTarget_Update", "ShortTermTarget")) // Action method invoked when the user saves an updated data item
              .Destroy(destroy => destroy.Action("ShortTermTarget_Destroy", "ShortTermTarget")) // Action method invoked when the user removes a data item
      )
      .Pageable()
      )