@using Mapper21.BE.Domain
@using Mapper21.UI.Models
@model Section

@{
    ViewBag.Title = "Edit";
    ViewBag.SectionId = Model.Id;
}

<script src="~/Scripts/Mapper21.js"> </script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="col-md-9">
        <div class="box box-primary">
            <div class="box-header">
                <i class="fa fa-edit"></i>
                <h3 class="box-title">Unit</h3>
            </div>
            <div class="box-body">
                <div class="row">
                    @foreach (SubSection @item in Model.SubSections)
                    {
                        <div class="col-md-4">
                            <!-- Primary box -->
                            <div class="box box-solid box-primary">
                                <div class="box-header" data-toggle="tooltip" title="" data-original-title="Header tooltip">
                                    <h3 class="box-title"><a style="color: #fff;" href="/CaseStudy/Edit/@item.Id">@item.Name</a></h3>
                                    <div class="box-tools pull-right">
                                        <button class="btn btn-primary btn-xs" data-widget="collapse"><i class="fa fa-minus"></i></button>
                                        <button class="btn btn-primary btn-xs" data-widget="remove"><i class="fa fa-times"></i></button>
                                    </div>
                                </div>
                                <div class="box-body">
                                    <p>
                                        @item.Description
                                    </p>
                                </div><!-- /.box-body -->
                                <div class="box-footer">
                                    <a href="~/Unit/Edit/@item.Id">Edit @item.Name Unit</a>
                                </div><!-- /.box-footer-->
                            </div><!-- /.box -->
                        </div>
                    }
                </div>
            </div>
            <div class="box-footer">
                <a class="btn btn-primary" href="~/Unit/Create/?SectionId=@Model.Id">Add a New Unit</a>
            </div>
        </div>
        
    </div>
}
    <div class="col-md-3">
        @Html.Partial("~/Views/Shared/_StrandNavigation.cshtml")
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }