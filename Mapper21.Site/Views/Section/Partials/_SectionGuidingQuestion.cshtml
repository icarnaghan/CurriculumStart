@using Mapper21.Business.Dto
@using Mapper21.Site.Models

@(Html.Kendo().Grid<GridDto>
      ()
      .Name("grid")
      .Columns(columns =>
      {
          columns.Bound(g => g.Name);
          columns.Command(commands =>
          {
              commands.Edit(); // The "edit" command will edit and update data items
              commands.Destroy(); // The "destroy" command removes data items
          }).Title("Commands").Width(200);
      })
      .ToolBar(toolbar =>
      {
          toolbar.Create(); // The "create" command adds new data items
          //toolbar.Save(); // The "save" command saves the changed data items
      })
      // .Editable(editable => editable.Mode(GridEditMode.InCell)) // Use in-cell editing mode
      .Editable(editable => editable.Mode(GridEditMode.InLine))
      .DataSource(dataSource =>
          dataSource.Ajax()
              //.Batch(true) // Enable batch updates
              .Model(model =>
              {
                  model.Id(g => g.Id); // Specify the property which is the unique identifier of the model
                  model.Field(g => g.Id).Editable(false).DefaultValue(new Guid()); // Make the Id property not editable
                  model.Field(g => g.ParentId).DefaultValue(@ViewBag.SectionId);
              })
              .Create(create => create.Action("Section_GuidingQuestion_Create", "GuidingQuestion")) // Action method invoked when the user saves a new data item
              .Read(read => read.Action("Section_GuidingQuestion_Read", "GuidingQuestion", new { sectionId = ViewBag.SectionId })) // Action method invoked when the grid needs data
              .Update(update => update.Action("Section_GuidingQuestion_Update", "GuidingQuestion")) // Action method invoked when the user saves an updated data item
              .Destroy(destroy => destroy.Action("Section_GuidingQuestion_Destroy", "GuidingQuestion")) // Action method invoked when the user removes a data item
      )
      .Pageable()
      )