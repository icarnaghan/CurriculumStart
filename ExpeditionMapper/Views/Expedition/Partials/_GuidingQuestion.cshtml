<h4><label>Guiding Questions</label></h4>



@(Html.Kendo().Grid<ExpeditionMapper.Models.ViewModels.GuidingQuestionViewModel>
    ()
    .Name("grid")
    .Columns(columns =>
    {
        columns.Bound(g => g.Id);
        columns.Bound(g => g.Name);
        columns.Command(commands =>
        {
            commands.Edit(); // The "edit" command will edit and update data items
            commands.Destroy(); // The "destroy" command removes data items
        }).Title("Commands").Width(200);
    })
    .ToolBar(toolbar =>
    {
        toolbar.Create(); // The "create" command adds new data items
        //toolbar.Save(); // The "save" command saves the changed data items
    })
        // .Editable(editable => editable.Mode(GridEditMode.InCell)) // Use in-cell editing mode
    .Editable(editable => editable.Mode(GridEditMode.InLine))
    .DataSource(dataSource =>
    dataSource.Ajax()
        //.Batch(true) // Enable batch updates
    .Model(model =>
    {
        model.Id(g => g.Id); // Specify the property which is the unique identifier of the model
        model.Field(g => g.Id).Editable(false); // Make the ProductID property not editable
    })
            .Create(create => create.Action("GuidingQuestion_Create", "GuidingQuestion", new { ExpeditionId = "1" })) // Action method invoked when the user saves a new data item
            .Read(read => read.Action("GuidingQuestion_Read", "GuidingQuestion", new { ExpeditionId = 1 }))  // Action method invoked when the grid needs data
            .Update(update => update.Action("GuidingQuestion_Update", "GuidingQuestion", new { ExpeditionId = 1 }))  // Action method invoked when the user saves an updated data item
            .Destroy(destroy => destroy.Action("GuidingQuestion_Destroy", "GuidingQuestion", new { ExpeditionId = 1 })) // Action method invoked when the user removes a data item
    )
    .Pageable()
)
