<h4><label>Science Big Ideas</label></h4>

@(Html.Kendo().Grid<ExpeditionMapper.Models.ViewModels.ScienceBigIdeaViewModel>
    ()
    .Name("grid3")
    .Columns(columns =>
    {
        columns.Bound(b => b.Id);
        columns.Bound(b => b.Idea).EditorTemplateName("ScienceBigIdeaDropdownList");
        columns.Bound(b => b.Rationale);
        columns.Command(commands =>
        {
            commands.Edit(); // The "edit" command will edit and update data items
            commands.Destroy(); // The "destroy" command removes data items
        }).Title("Commands").Width(200);
    })
    .ToolBar(toolbar =>
    {
        toolbar.Create(); // The "create" command adds new data items
        //toolbar.Save(); // The "save" command saves the changed data items
    })
        // .Editable(editable => editable.Mode(GridEditMode.InCell)) // Use in-cell editing mode
    .Editable(editable => editable.Mode(GridEditMode.InLine))
    .DataSource(dataSource =>
    dataSource.Ajax()
        //.Batch(true) // Enable batch updates
    .Model(model =>
    {
        model.Id(g => g.Id); // Specify the property which is the unique identifier of the model
        model.Field(g => g.Id).Editable(false); // Make the ProductID property not editable
    })
        .Create(create => create.Action("ScienceBigIdea_Create", "ScienceBigIdea", new { ExpeditionId = 1 })) // Action method invoked when the user saves a new data item
        .Read(read => read.Action("ScienceBigIdea_Read", "ScienceBigIdea", new { ExpeditionId = 1 }))  // Action method invoked when the grid needs data
        .Update(update => update.Action("ScienceBigIdea_Update", "ScienceBigIdea", new { ExpeditionId = 1 }))  // Action method invoked when the user saves an updated data item
        .Destroy(destroy => destroy.Action("ScienceBigIdea_Destroy", "ScienceBigIdea", new { ExpeditionId = 1 })) // Action method invoked when the user removes a data item
    )
    .Pageable()
)
