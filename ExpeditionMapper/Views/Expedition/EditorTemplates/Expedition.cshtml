@model ExpeditionMapper.Models.Domain.Expedition
@using ExpeditionMapper.Models

@Html.HiddenFor(x => x.Id)
@Html.HiddenFor(x => x.GradeLevelId)

<p>
    <label>Name</label>
    @Html.TextBoxFor(x => x.Name)
</p>

<p>
    <label>Description</label>
    @Html.TextBoxFor(x => x.Description)
</p>

<div id="guidingQuestions">
    @Html.EditorFor(x => x.GuidingQuestions)
</div>

<p>
    @Html.AddLink("Add More Guiding Questions", "#guidingQuestions", ".guidingQuestion", "GuidingQuestions", typeof(ExpeditionMapper.Models.Domain.GuidingQuestion))
</p>