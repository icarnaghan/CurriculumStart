@using ExpeditionMapper.Models.ViewModels
@model ExpeditionMapper.Models.Domain.StaCollection

@{
    ViewBag.Title = "Edit";
    ViewBag.StaCollectionId = Model.Id;
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>StaCollection</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        
        <div id="standard">
            @Html.Partial("~/Views/StaCollection/Partials/_Standard.cshtml", new StandardViewModel { StaCollectionId = Model.Id })
        </div>

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
