@using ExpeditionMapper.Models
@using ExpeditionMapper.Models.ViewModels
@(Html.Kendo().Grid<ExpeditionHabitViewModel>()
     .Name("Grid")
     .Columns(columns =>
     {
         columns.Bound(p => p.Id).Width(50);
         columns.Bound(p => p.Habit).Width(50).EditorTemplateName("DepartmentDropDownList");
         columns.Command(command => command.Edit()).Width(50);
     })
     .ToolBar(commands => commands.Create())
     .Editable(editable => editable.Mode(GridEditMode.InLine))
     .DataSource(dataSource => dataSource
         .Ajax()
         .Model(model => model.Id(p => p.Id))
         .Read(read => read.Action("GetEmployees", "Employee", new {expeditionId = 1}))
             .Update(update => update.Action("UpdateEmployees", "Employee"))
             .Create(create => create.Action("CreateEmployee", "Employee"))
     )
)